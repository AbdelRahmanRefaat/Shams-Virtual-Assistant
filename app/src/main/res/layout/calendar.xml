<!--            android:textColor="@color/white"-->
<!--            android:textAlignment="textStart"-->
<!--            android:fontFamily="@font/sans_arabic_regular"-->
<!--            android:textSize="15sp" />-->

    </RelativeLayout>
</RelativeLayout>