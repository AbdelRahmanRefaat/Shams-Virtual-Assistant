<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_received_message"
        android:backgroundTint="@color/primary_dark"
        android:onClick="GoToCalendar">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_event_24" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/sans_arabic_regular"
            android:text="شم النسيم"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:text="4 ابريل 2022"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sans_arabic_regular"
            android:textSize="15sp" />
        <Button
            android:id="@+id/open_calendar"
            android:layout_width="150dp"
            android:maxWidth="250dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_open_in_new_24"
            android:text="افتح الكالندر"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/sans_arabic_regular"
            app:cornerRadius="25dp" />
    </RelativeLayout>
</RelativeLayout>