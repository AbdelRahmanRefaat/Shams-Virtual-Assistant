<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/layout_round_corners"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="GoToCalendar">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_event_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#222326"
            android:textSize="45sp"
            android:textAlignment="center"
            android:layout_marginEnd="20dp"
            android:text="شم النسيم"/>
        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 ابريل 2022"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/event_name"
            android:layout_marginEnd="25dp"
            android:textColor="#696d7a"/>

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 صباحا"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/event_date"
            android:layout_marginEnd="25dp"
            android:textColor="#696d7a"/>

    </RelativeLayout>
</RelativeLayout>